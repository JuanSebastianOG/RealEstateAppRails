<div class="text-center">
<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <h1 class="h3 mb-3 font-weight-normal">Sign up</h1>
      <label for="inputEmail" class="sr-only">Email address</label>
      <%= f.email_field :email, autofocus: true, class: "form-control", id: "inputEmail", placeholder: "Email address", autocomplete: "current-email" %>
      <label for="inputPassword" class="sr-only">Password</label>
      <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> characters minimum)</em>
      <% end %><br />
      <%= f.password_field :password, autocomplete: "new-password", class: "form-control", placeholder:"Password", id:"inputPassword" %>
      <div class="field">
          <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control", placeholder:"Passwor confirmation", id:"inputPassword"  %>
      </div>
      <div class="checkbox mb-3">
        <label>
          <input type="checkbox" value="remember-me"> Remember me
        </label>
      </div>
      <button class="btn btn-lg btn-primary btn-block" type="submit">Sign in</button>
      <p class="mt-5 mb-3 text-muted">Â© 2017-2018</p>
<% end %>

<%= render "devise/shared/links" %>
</div>